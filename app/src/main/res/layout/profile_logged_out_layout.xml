<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/profile_out_username_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_username_label" />

    <EditText
        android:id="@+id/profile_out_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@+id/profile_in_username" />

    <TextView
        android:id="@+id/profile_out_password_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/profile_password_label" />

    <EditText
        android:id="@+id/profile_out_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:labelFor="@+id/profile_in_password"/>

    <Button
        android:id="@+id/profile_out_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/profile_log_in" />

    <TextView
        android:id="@+id/profile_out_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/profile_forgot_password"
        android:textColor="@color/DARK_GRAY"
        android:textSize="@dimen/profile_forgot_password" />

</LinearLayout>