<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="chrisandbrendanappdev.unhalbedo.fragments.SurveyPatchinessPercentage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/survey_question_margin_bottom"
        android:layout_marginTop="@dimen/survey_question_margin_top"
        android:gravity="center"
        android:text="@string/survey_patchiness_percentage_question"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/survey_question_size"/>

    <SeekBar
        android:id="@+id/survey_patchiness_percentage_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/survey_patchiness_percentage_slider_margin"
        android:max="100"
        android:progress="50" />

    <TextView
        android:id="@+id/survey_patchiness_percentage_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/BLACK"
        android:textSize="@dimen/survey_question_size"
        android:layout_marginBottom="@dimen/survey_patchiness_percentage_value_margin" />

    <Button
        android:id="@+id/survey_patchiness_percentage_next"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/next"
        android:textSize="@dimen/survey_next_text_size" />

</LinearLayout>
